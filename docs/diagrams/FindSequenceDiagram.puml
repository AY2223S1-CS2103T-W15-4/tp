FridayParser --> LogicManager : fc
deactivate FridayParser

LogicManager -> FindCommand : fc.execute(m)
activate FindCommand

FindCommand -[MODEL_COLOR]-> Model : m.updateFilteredStudentList(p)
activate Model

Model -[MODEL_COLOR]-> FilteredList : fs.setPredicate(p)
activate FilteredList


FilteredList -[MODEL_COLOR]--> Model :
deactivate FilteredList

Model -[MODEL_COLOR]--> FindCommand
deactivate Model

create CommandResult
FindCommand -> CommandResult :
activate CommandResult

CommandResult -> FindCommand : r
deactivate CommandResult
FindCommand --> LogicManager : r
deactivate FindCommand


[<--LogicManager : r
deactivate LogicManager
@enduml
